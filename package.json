{
  "name": "patitas",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "scripts": {
    "install": "npm-run-all --parallel install:client install:server",
    "install:client": "npm install --prefix client/",
    "install:server": "npm install --prefix server/",
    "test": "npm-run-all --sequential test:client test:server",
    "test:client": "npm test --prefix client/",
    "test:server": "npm test --prefix server/",
    "start": "env-cmd npm run start:${NODE_ENV:=development}",
    "start:production": "node ./server/build/server/src/index.js",
    "start:development": "npm-run-all --parallel start:development:client start:development:server",
    "start:development:client": "PORT=3000 REACT_APP_SERVER_URL=http://127.0.0.1:8080 FORCE_COLOR=true npm start --prefix client/ | cat",
    "start:development:server": "npm start --prefix server/",
    "build": "npm-run-all --parallel build:server build:client",
    "build:client": "npm run build --prefix client/",
    "build:server": "NODE_ENV=development npm run build --prefix server/"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "env-cmd": "^10.0.1"
  }
}