{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "**/node_modules/**/*.ts"
    ]
  },
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ],
    "array-type": [
      true,
      "array"
    ],
    "variable-name": [
      true,
      "check-format",
      "ban-keywords",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "curly": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "interface-name": false,
    "member-ordering": false,
    "arrow-parens": false,
    "eofline": false,
    "max-classes-per-file": false,
    "ban-types": false,
    "interface-over-type-literal": false,
    "no-empty": false
  }
}